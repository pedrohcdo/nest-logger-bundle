{
	"compilerOptions": {
		"declaration": true,
		"removeComments": true,
		"module": "commonjs",
		"target": "es2019",
		"sourceMap": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"incremental": true,
		"baseUrl": "./",
		"outDir": "./dist",
		"paths": {
			"@pedrohcd/nest-logger": ["lib/src"],
			"@pedrohcd/nest-logger/*": ["lib/src/*"],
			"test-utils": ["test-utils/src"],
			"test-utils/*": ["test-utils/src/*"],
		}
	}
}
